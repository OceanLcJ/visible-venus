---
import Hr from "./Hr.astro";
import IconX from "@/assets/icons/IconX.svg";
import IconMoon from "@/assets/icons/IconMoon.svg";
import IconSearch from "@/assets/icons/IconSearch.svg";
import IconArchive from "@/assets/icons/IconArchive.svg";
import IconSunHigh from "@/assets/icons/IconSunHigh.svg";
import IconMenuDeep from "@/assets/icons/IconMenuDeep.svg";
import LinkButton from "./LinkButton.astro";
import LanguageSwitcher from "./LanguageSwitcher.astro";
import { SITE } from "@/config";
import { getLocalizedPath } from "@/utils/getPath";
import type { SupportedLocale } from "@/config";

const { pathname } = Astro.url;

// Extract locale from pathname
const pathSegments = pathname.split('/').filter(Boolean);
const currentLocale = (pathSegments[0] === 'en' || pathSegments[0] === 'zh')
  ? pathSegments[0] as SupportedLocale
  : 'en';

// Remove trailing slash from current pathname if exists
const currentPath =
  pathname.endsWith("/") && pathname !== "/" ? pathname.slice(0, -1) : pathname;

const isActive = (path: string) => {
  const currentPathArray = currentPath.split("/").filter(p => p.trim());
  const pathArray = path.split("/").filter(p => p.trim());

  return currentPath === path || currentPathArray[0] === pathArray[0];
};

// Generate localized navigation paths
const postsPath = getLocalizedPath("posts", currentLocale);
const tagsPath = getLocalizedPath("tags", currentLocale);
const aboutPath = getLocalizedPath("about", currentLocale);
const archivesPath = getLocalizedPath("archives", currentLocale);
const searchPath = getLocalizedPath("search", currentLocale);
const homePath = getLocalizedPath("", currentLocale);
---

<header>
  <a
    id="skip-to-content"
    href="#main-content"
    class="absolute -top-full left-16 z-50 bg-background px-3 py-2 text-accent backdrop-blur-lg transition-all focus:top-4"
  >
    {currentLocale === 'zh' ? '跳转到内容' : 'Skip to content'}
  </a>
  <div
    id="nav-container"
    class="mx-auto flex max-w-3xl flex-col items-center justify-between sm:flex-row"
  >
    <div
      id="top-nav-wrap"
      class="relative flex w-full items-baseline justify-between bg-background p-4 sm:items-center sm:py-6"
    >
      <a
        href={homePath}
        class="absolute py-1 text-xl leading-8 font-semibold whitespace-nowrap sm:static sm:my-auto sm:text-2xl sm:leading-none"
      >
        {SITE.title}
      </a>
      <nav
        id="nav-menu"
        class="flex w-full flex-col items-center sm:ml-2 sm:flex-row sm:justify-end sm:space-x-4 sm:py-0"
      >
        <button
          id="menu-btn"
          class="focus-outline self-end p-2 sm:hidden"
          aria-label={currentLocale === 'zh' ? '打开菜单' : 'Open Menu'}
          aria-expanded="false"
          aria-controls="menu-items"
        >
          <IconX id="close-icon" class="hidden" />
          <IconMenuDeep id="menu-icon" />
        </button>
        <ul
          id="menu-items"
          class:list={[
            "mt-4 grid w-44 grid-cols-2 place-content-center gap-2",
            "[&>li>a]:block [&>li>a]:px-4 [&>li>a]:py-3 [&>li>a]:text-center [&>li>a]:font-medium [&>li>a]:hover:text-accent sm:[&>li>a]:px-2 sm:[&>li>a]:py-1",
            "hidden",
            "sm:mt-0 sm:ml-0 sm:flex sm:w-auto sm:gap-x-5 sm:gap-y-0",
          ]}
        >
          <li class="col-span-2">
            <a href={postsPath} class:list={{ "active-nav": isActive(postsPath) }}>
              {currentLocale === 'zh' ? '文章' : 'Posts'}
            </a>
          </li>
          <li class="col-span-2">
            <a href={tagsPath} class:list={{ "active-nav": isActive(tagsPath) }}>
              {currentLocale === 'zh' ? '标签' : 'Tags'}
            </a>
          </li>
          <li class="col-span-2">
            <a href={aboutPath} class:list={{ "active-nav": isActive(aboutPath) }}>
              {currentLocale === 'zh' ? '关于' : 'About'}
            </a>
          </li>
          {
            SITE.showArchives && (
              <li class="col-span-2">
                <LinkButton
                  href={archivesPath}
                  class:list={[
                    "focus-outline flex justify-center p-3 sm:p-1",
                    {
                      "active-nav [&>svg]:stroke-accent": isActive(archivesPath),
                    },
                  ]}
                  ariaLabel={currentLocale === 'zh' ? '归档' : 'archives'}
                  title={currentLocale === 'zh' ? '归档' : 'Archives'}
                >
                  <IconArchive class="hidden sm:inline-block" />
                  <span class="sm:sr-only">{currentLocale === 'zh' ? '归档' : 'Archives'}</span>
                </LinkButton>
              </li>
            )
          }
          <li class="col-span-1 flex items-center justify-center">
            <LinkButton
              href={searchPath}
              class:list={[
                "focus-outline flex p-3 sm:p-1",
                { "[&>svg]:stroke-accent": isActive(searchPath) },
              ]}
              ariaLabel={currentLocale === 'zh' ? '搜索' : 'search'}
              title={currentLocale === 'zh' ? '搜索' : 'Search'}
            >
              <IconSearch />
              <span class="sr-only">{currentLocale === 'zh' ? '搜索' : 'Search'}</span>
            </LinkButton>
          </li>
          <li class="col-span-1 flex items-center justify-center">
            <LanguageSwitcher currentLocale={currentLocale} currentPath={currentPath} />
          </li>
          {
            SITE.lightAndDarkMode && (
              <li class="col-span-1 flex items-center justify-center">
                <button
                  id="theme-btn"
                  class="focus-outline relative size-12 p-4 sm:size-8 hover:[&>svg]:stroke-accent"
                  title={currentLocale === 'zh' ? '切换明暗主题' : 'Toggles light & dark'}
                  aria-label={currentLocale === 'zh' ? '自动' : 'auto'}
                  aria-live="polite"
                >
                  <IconMoon class="absolute top-[50%] left-[50%] -translate-[50%] scale-100 rotate-0 transition-all dark:scale-0 dark:-rotate-90" />
                  <IconSunHigh class="absolute top-[50%] left-[50%] -translate-[50%] scale-0 rotate-90 transition-all dark:scale-100 dark:rotate-0" />
                </button>
              </li>
            )
          }
        </ul>
      </nav>
    </div>
  </div>
  <Hr />
</header>

<script>
  function toggleNav() {
    const menuBtn = document.querySelector("#menu-btn");
    const menuItems = document.querySelector("#menu-items");
    const menuIcon = document.querySelector("#menu-icon");
    const closeIcon = document.querySelector("#close-icon");

    if (!menuBtn || !menuItems || !menuIcon || !closeIcon) return;

    menuBtn.addEventListener("click", () => {
      const openMenu = menuBtn.getAttribute("aria-expanded") === "true";
      const isZh = window.location.pathname.startsWith('/zh');

      menuBtn.setAttribute("aria-expanded", openMenu ? "false" : "true");
      menuBtn.setAttribute("aria-label", openMenu
        ? (isZh ? "打开菜单" : "Open Menu")
        : (isZh ? "关闭菜单" : "Close Menu")
      );

      menuItems.classList.toggle("hidden");
      menuIcon.classList.toggle("hidden");
      closeIcon.classList.toggle("hidden");
    });
  }

  toggleNav();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", toggleNav);
</script>
